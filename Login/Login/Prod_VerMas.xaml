<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.Prod_VerMas">
    <ContentPage.Content>
        <StackLayout>
            <!-- Mostrar el nombre del producto -->
            <Label Text="{Binding Producto.Nombre}" FontAttributes="Bold" FontSize="Large" HorizontalOptions="CenterAndExpand" />

            <!-- Mostrar la imagen del producto -->
            <Image Source="{Binding Producto.ImagenSource}" Aspect="AspectFit" VerticalOptions="CenterAndExpand" />
            
            <!--.boton de comprar producto-->
            <Button Clicked="Button_Clicked" BackgroundColor="#112B47" Text="Comprar"></Button>
            
            <Label Text="Precio: " FontAttributes="Bold"></Label>
            
            <!-- Mostrar el precio del producto -->
            <Label Text="{Binding Producto.Precio}" FontSize="Medium" HorizontalOptions="StartAndExpand" />
            
            <Label Text="Descripcion: " FontAttributes="Bold"></Label>
            <!-- Mostrar la descripción del producto -->
            <Label Text="{Binding Producto.Descripcion}" FontSize="Small" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
